.PHONY: all clean distclean mostyclean realclean
VPATH=sys:net
OBJ:=unix_main.o

all: gpl-vote
clean:
	make -C sys clean
	make -C net clean
	make -C cmn clean
	rm -f gpl-vote ${OBJ}

distclean: clean
	rm -f Makefile confdefs.h config.h config.log config.status
	rm -rf autom4te.cache/
mostlyclean: distclean
realclean: distclean

gpl-vote: ${OBJ} sys.a net.a cmn.a
	${CXX} ${CXXFLAGS} ${LDFLAGS} ${LIBS} $? -o $@

sys.a:
	make -C sys

net.a: net/*
	make -C net

cmn.a: cmn/*
	make -C cmn

